{
  "name": "aio-tvm",
  "version": "2.0.0",
  "description": "The Adobe I/O token vending machine for used to integrate external cloud services with Adobe I/O Runtime",
  "author": "Adobe Inc.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": "adobe/aio-tvm",
  "scripts": {
    "lint": "eslint './actions/**/*.js' './lib/**/*.js' './test/**/*.js' './scripts/**/*.js'",
    "beautify": "npm run lint -- --fix",
    "deploy": "webpack && dotenv cna-scripts deploy.actions",
    "undeploy": "dotenv cna-scripts undeploy.actions",
    "test": "npm run unit && npm run lint",
    "unit": "jest",
    "func": "jest -c jest.func.config.js",
    "release": "npm run test && dotenv npm run func && np --no-publish --no-tests --no-cleanup --no-yarn && npm run deploy",
    "generate-doc": "redoc-cli bundle docs/swagger.json -o docs/api.html"
  },
  "jest.pathToConfig": "jest.config.js",
  "devDependencies": {
    "@adobe/io-cna-scripts": "^0.3.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@types/jest": "^24.0.18",
    "babel-eslint": "^10.0.3",
    "dotenv": "^8.1.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsdoc": "^18.4.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "execa": "^3.4.0",
    "fs-extra": "^8.1.0",
    "jest": "^24.9.0",
    "node-fetch": "^2.6.0",
    "np": "^5.1.1",
    "redoc-cli": "^0.9.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "@adobe/aio-lib-core-logging": "1.0.0",
    "@azure/cosmos": "^3.3.1",
    "@azure/storage-blob": "^12.0.1",
    "@hapi/joi": "^16.1.4",
    "aws-sdk": "^2.539.0",
    "crypto": "^1.0.1",
    "openwhisk": "^3.20.0"
  }
}
